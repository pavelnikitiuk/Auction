@using Auction.Models
@using Action = Antlr.Runtime.Misc.Action
@model LotsListViewModel
@{
    ViewBag.Title = @Model.CurrentCategory??"All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

<h2>@Model.CurrentCategory</h2>
@{ int i = 1; }
<div class="container img-rounded" style="background-color: white; margin-top: 20px; color: black">
    @foreach (var l in Model.Lots)
    {

        Html.RenderPartial("LotPartial", new LotModel() { Lot = l, BidAmount = l.CurrentPrice, NumOnPage = i++ });

    }
</div>
<ul class="pagination">

    @Html.PageLinks(Model.PageModel, x => Url.Action("List", new { page = x, categoryId = Model.CurrentCategory }))
</ul>


