@model Auction.Models.EditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@section Styles
{
    @Styles.Render("~/Content/bdate")
}
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootsrapdate")

    @Scripts.Render("~/bundles/bootstrap")
}
@using (Html.BeginForm("Edit", "Lots", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.LotID)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    </div>

    List<SelectListItem> list = (from category in Model.Categories select new SelectListItem { Text = category.Name, Value = category.Id.ToString() }).ToList();

    <div class="form-group">
        <label>Category</label>
        @Html.DropDownList("categId", list, new { @class = "form-control" })

    </div>
    <input type="submit" class="btn btn-success" />
}




