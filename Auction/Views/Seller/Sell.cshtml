@model Auction.Domain.Entities.Lot
@{
    ViewBag.Title = "Sell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sell</h2>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootsrapdate")

    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datetimepicker').datetimepicker({
                format: 'MM.DD.YYYY HH:mm'
            });
        });
    </script>



}
@using (Html.BeginForm("Sell", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    List<SelectListItem> list = (from category in (IEnumerable<string>)ViewBag.Categories
                                 select new SelectListItem
                                 {
                                     Text = category
                                 }).ToList();

    <div class="form-group">
        <label>Category</label>
        @Html.DropDownList("categ", list, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.MinPrice)
        @Html.TextBoxFor(x => x.MinPrice, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EndTime)
        <div class='input-group date' id='datetimepicker'>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            @Html.TextBoxFor(x => x.EndTime, new { @class = "form-control" })
        </div>
    </div>





    <div>

            <input class="btn btn-info" multiple type="file" name="Image" value="Upload new image:" />
        </div>
    <input type="submit" class="btn btn-success" />
}




